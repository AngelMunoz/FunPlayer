{
    "compilerOptions": {
        "allowJs": true,
        "checkJs": true,
        "target": "ES2017",
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "isolatedModules": true,
        "lib": [
            "DOM",
            "ES2020"
        ]
    },
    "include": [
        "./**/*.d.ts",
        "./wwwroot/js"
    ],
    "typeAcquisition": {
        "enable": true,
        "include": [
            "wicg-file-system-access"
        ]
    }
}